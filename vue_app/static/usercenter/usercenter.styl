.usercenter-wrapper
  width 100%
  .header-wrapper
    width 100%
    overflow hidden
    header
      width 100%
      z-index 200
      position fixed
      top 0
      left 0
      .header-content
        background #89be48
        width 100%
        position relative
        span
          width 10%
          height 48px
          font-size 18px
          line-height 48px
          color white
          background-size 48px 48px
          position absolute
          margin-right 2%
          top 0
          right 0
        p
          width 80%
          margin 0 auto
          height 48px
          font-size 20px
          line-height 48px
          text-align center
          color white
  .content-wrapper
    background #e0e0e0
    padding-bottom 55px
    margin-top 48px
    width 100%
    .content
      width 100%
      .no-login
        text-align center
        background-color #fff
        height 108px
        background url(http://i1.lifevccdn.com/images/h5/core/background.png) no-repeat 50% 50%
        p
          font-size 15px
          text-align center
          padding 10px
        .login-register
          display inline-block
          width 137px
          height 38px
          border 2px solid #009c42
          border-radius 19px
          text-align center
          line-height 38px
          a
            display inline-block
            padding 0 10px
          span
            display inline-block
            width 2px
            height 13px
            background #009c42
      .things-wrapper
        background #fff
        .things-list
          height 60px
          border-bottom 1px solid #EEEEEE
          width 100%
          overflow hidden
          .hasborder
            border-right 1px solid #e0e0e0
            border-left 1px solid #e0e0e0
          .thing
            width 33%
            height 30px
            float left
            margin 18px 0 0
            a
              display block
              text-align center
              color #585858

              .icon
                display inline-block
                position relative
              .what
                display inline-block
                height 30px
                font-size 13px
                line-height 30px
      .dashbord

        ul
          margin-bottom 10px
          background #fff
          li
            a
              display block
              height 60px
              img
                margin 15px 11px 0
                height 30px
                width 30px
                float left
              .li-item
                font-size 14px
                display inline-block
                height 60px
                line-height 60px
                float left
              .li-jiantou
                height 10px
                width 10px
                display inline-block
                float right
                border-right 2px solid #bbb
                border-top 2px solid #bbb
                margin 25px 10px 0 0
                transform rotate(45deg)
                -webkit-transform rotate(45deg)