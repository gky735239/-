.shopcart-wrapper
  width 100%
  .header-wrapper
    width 100%
    overflow hidden
    header
      width 100%
      z-index 200
      position fixed
      top 0
      left 0
      .header-content
        background #89be48
        width 100%
        position relative
        span
          width 10%
          height 48px
          background-size 48px 48px
          position absolute
          top 0
          left 0
        p
          width 80%
          margin 0 auto
          height 48px
          font-size 20px
          line-height 48px
          text-align center
          color white
      .login-wrapper
        height 36px
        background #f0fae6;
        padding 10px 0 6px 0
        .header-login
          width 97%
          height 36px
          margin 0 auto
          position relative
          a
            display inline-block
            color rgb(137, 190, 72)
            height 33px
            width 66px
            background white
            border 1px solid #89be48
            text-align center
            line-height 33px
            position absolute
            left 0
            top 0
          span
            height 36px
            font-size 14px
            display table-cell
            text-align left
            vertical-align middle
            position absolute
            left 80px
            letter-spacing 1px
            top 0
  .shopcart
    margin-top 100px
    width 100%
    background #e0e0e0
    text-align center
    .exchange-wrapper
      width 100%
      padding 8px 0
      background white
      .header-exchange
        width 94%
        margin auto
        .exchange-input
          display inline-block
          width 80%
          height 34px
          border 1px solid #e7e7e7
          text-align center
          font-size 12px
          color #dddddd
        .exchange-btn
          display inline-block
          width 60px
          height 36px
          border 1px solid #0ebc01
          color #0ebc01
          background #fff
    .shopcart-img
      height 160px
      width 351px
      padding 10px 0 0 24px
      vertical-align middle
      text-align center
      img
        height 160px
        width 160px
    .shopcart-text
      font-size 18px
      height 27px
      text-align center
    .goshop
      text-align center
      a
        display inline-block
        color rgb(137, 190, 72)
        font-size 18px
        padding 6px 18px
        border 1px solid rgb(137, 190, 72)
        margin-bottom 5px
  .recommen-wrapper
    position fixed
    bottom 55px
    left 0
    .Rico
      padding 10px 11px
      font-size 18px
      border-bottom 1px solid #b3b3b3
    .recommen
      width 100%
      padding 16px 0
      border-bottom 1px solid #b3b3b3
      .item-list
        height 144px
        width 1060px
        .item
          width 96px
          margin 0 5px
          float left
          img
            width 100%
          p
            overflow hidden
            white-space nowrap
            text-overflow ellipsis
            font-size 13px
            height 24px
            line-height 24px
          span
            display inline-block
            height 24px
            line-height 24px
            font-size 13px

