border-1px($color)
  position relative
  border none
  &:after
    position absolute
    top 40px
    width: 100%
    height 1px
    background $color
    content ''
    transform scaleY(.5)

bg-image($url)
  background-repeat no-repeat
  background-image url($url +"@2x.png")
  @media (min-device-pixel-radio:3), (-webkit-min-device-pixel-radio:3)
    background-image url($url +"@3x.png")

bg-star($url)
  background-image url('../star/'+ $url +"@2x.png")
  background-repeat no-repeat
  @media (min-device-pixel-radio:3), (-webkit-min-device-pixel-radio:3)
    background-repeat no-repeat
    background-image url('../star/'+ $url +"@3X.png")